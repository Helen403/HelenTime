<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60000000">

    <ImageView

        android:id="@+id/register_close"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="35dp"
        android:padding="10dp"
        android:src="@mipmap/dialog_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="110dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/register_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="注册"
            android:textColor="#fff"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"

            android:orientation="vertical">


            <!--   <LinearLayout
                   android:layout_marginBottom="10dp"
                   android:gravity="center_vertical"
                   android:layout_width="match_parent"
                   android:layout_height="45dp">

                   <View
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="match_parent"/>

                   <ImageView
                       android:id="@+id/login_close"
                       android:layout_width="45dp"
                       android:layout_height="45dp"
                       android:padding="10dp"
                       android:layout_marginTop="5dp"
                       android:src="@mipmap/abc_ic_clear_mtrl_alpha" />
               </LinearLayout>-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_phone"
                android:orientation="horizontal">

                <EditText xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/register_phone"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="0123456789"
                    android:gravity="center_vertical"
                    android:hint="手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textCursorDrawable="@drawable/shape_color_curso" />

                <ImageView

                    android:id="@+id/register_phone_v"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    android:src="@mipmap/dialog_close"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_phone">

                <EditText xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/register_ver"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="0123456789"
                    android:gravity="center_vertical"
                    android:hint="验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textCursorDrawable="@drawable/shape_color_curso" />

                <TextView
                    android:id="@+id/register_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_phone"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="获取验证码"
                    android:textColor="#fff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_phone"
                android:orientation="horizontal">

                <EditText xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/register_pwd"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="密码"
                    android:inputType="textPassword"
                    android:maxLength="10"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textCursorDrawable="@drawable/shape_color_curso" />

                <ImageView
                    android:id="@+id/register_pwd_v"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="7dp"
                    android:src="@mipmap/ic_eye_white" />

            </LinearLayout>

            <TextView
                android:id="@+id/register_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_ll"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_phone"
                android:gravity="center"
                android:padding="12dp"
                android:text="注册"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>