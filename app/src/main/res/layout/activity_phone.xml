<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/recommend_bg_unlike" />

    <ImageView
        android:id="@+id/phone_close"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:src="@mipmap/abc_ic_clear_mtrl_alpha" />


    <LinearLayout
        android:id="@+id/phone_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/shape_phone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
           <!--
            android:inputType="phone"
            android:digits="0123456789"-->
            <EditText xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/phone_phone"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"

                android:background="@null"

                android:gravity="center_vertical"
                android:hint="手机号"
                android:maxLength="11"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textCursorDrawable="@drawable/shape_color_curso" />

            <ImageView
                android:id="@+id/phone_phone_v"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="12dp"
                android:src="@mipmap/dialog_close"
                android:visibility="invisible" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#fff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/phone_pwd"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="密码"
                android:inputType="textPassword"
                android:maxLength="10"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textCursorDrawable="@drawable/shape_color_curso" />

            <ImageView
                android:id="@+id/phone_pwd_v"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="7dp"
                android:src="@mipmap/ic_eye_white" />

        </LinearLayout>


        <!--
          app:drawable_follow_focus="true"
            app:drawable_tint="#fff"
            app:drawable_visibility="@mipmap/ic_eye_white"
            app:drawable_visibility_off="@mipmap/ic_eye_white_error"-->


    </LinearLayout>

    <TextView
        android:id="@+id/phone_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_ll"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_phone"
        android:gravity="center"
        android:padding="12dp"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/phone_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_login"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="6dp"
        android:padding="10dp"
        android:text="注册"
        android:textColor="#fff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/phone_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/phone_login"
        android:layout_marginRight="25dp"
        android:layout_marginTop="6dp"
        android:padding="10dp"
        android:text="忘记"
        android:textColor="#fff"
        android:textSize="16sp" />

</RelativeLayout>